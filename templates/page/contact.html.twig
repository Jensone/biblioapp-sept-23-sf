{% extends 'base.html.twig' %}

{% block title %}Hello PageController!
{% endblock %}

{% block body %}

	<div class="m-auto col-4 border rounded bg-light p-3">
		{{ form_start(contact) }}

            <div class="mb-3">
                {{ form_label(contact.name) }}
                <div class="input-group">
                    <span class="input-group-text" id="basic-addon1"><i class="bi bi-person"></i></span>
                    {{ form_widget(contact.name, {
                        attr: {class: 'form-control'},
                        }) 
                    }}
                </div> 
            </div>

            <div class="mb-3"> {# Début de l'input email #}
                {{ form_label(contact.email) }} {# Le label #}
                <div class="input-group">
                    <span class="input-group-text" id="basic-addon1"><i class="bi bi-envelope-at"></i></span>
                    {{ form_widget(contact.email, {
                        attr: {class: 'form-control'},
                        }) 
                    }} {# L'input avec son icône #}
                </div> 
            </div> {# Fin du premier input email #}

            <div class="mb-3"> {# Début du select #}
                {{ form_label(contact.subject) }} {# Le label #}
                {{ form_widget(contact.subject, {
                    attr: {class: 'form-select'},
                    }) 
                }}
            </div> {# Fin du select #}

            {# {{ form_row(contact.message) }} #}

            <div class="mb-3"> 
                {{ form_label(contact.message) }} 
                <div class="input-group">
                    <span class="input-group-text" id="basic-addon1"><i class="bi bi-chat-left-text"></i></span>
                    {{ form_widget(contact.message, {
                        attr: {
                            class: 'form-control',
                            rows: 5,
                            },
                        }) 
                    }} 
                </div> 
            </div> 

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" name="consent" id="form-check">
                <label for="form-check-label">J'accepte d'être recontacté(e)</label>
            </div>

            <button type="submit" class="btn btn-dark">
                Envoyer
            </button>


		{{ form_end(contact) }}
	</div>

{% endblock %}
